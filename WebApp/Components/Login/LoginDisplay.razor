@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using WebApp.Components.UI
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <Avatar>
            <AvatarImage src= "@context.User.Claims.FirstOrDefault(c => c.Type == "picture")?.Value" />
        </Avatar>
        <ButtonLink href="/.auth/logout">Log out</ButtonLink>
    </Authorized>
    <NotAuthorized>
        <ButtonLink href="/.auth/login/auth0">
            Login
        </ButtonLink>   
    </NotAuthorized>
</AuthorizeView>

@code{
    public void BeginLogOut()
    {
        Navigation.NavigateToLogout("/.auth/logout");
    }
}

@inherits SparkComponent

<NavLink @attributes="@attributes" class="text-muted-foreground py-1 rounded inline-flex items-center text-sm font-medium transition-colors hover:text-primary hover:outline">
	@ChildContent
</NavLink>


@code {
	[Parameter]
	public bool IsActive { get; set; } = false;
	private string activeClasses = "";

	protected override void OnInitialized()
	{
		activeClasses = IsActive ? "text-primary" : "text-muted-foreground";
	}
}

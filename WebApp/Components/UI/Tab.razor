@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Web

<div class="flex items-center justify-center align-middle rounded-lg px-4 py-2 cursor-pointer" @onclick="OnClick">
    @if(IconType is not null){
     <DynamicComponent Type="@IconType" />
    }
    @Text
</div>

@code {
    [Parameter]
    public string? Icon { get; set; } = "";

    [Parameter]
    public string? Text { get; set; }

    
    private Type? IconType { get; set; }

    [Parameter]
    public EventCallback OnClick { get; set; }

    protected override void OnInitialized(){
        IconType = Icon?.ToString()?.Length > 0 ? Type.GetType($"WebApp.Components.UI.{Icon}") : null ;
    }

}

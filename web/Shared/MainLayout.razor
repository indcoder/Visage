@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    Hi, @context.User.Identity.Name!
                    <a href="/.auth/logout?post_logout_redirect_url=/">Logout</a>
                </Authorized>
                <NotAuthorized>
                    <a href="/.auth/login/github">Log In</a>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
